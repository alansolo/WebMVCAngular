@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    
<head>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Login/Login.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/Login/Login.js"></script>

</head>

<body>

    <div ng-app="MyApp" ng-controller="MyController">

        
        <div class="container col-12">

            @*ENCABEZADO*@
            <div class="row pl-3 pr-3 ">
                <div class="w-100 headerColor">
                    <img src="~/Images/gatito.png" alt="Imagen de gatito" class="imagenGatito ml-auto" />
                </div>
                <div class="w-100">
                    <h3 class="textoHeader">Mi primer login</h3>
                </div>
            </div>

            <hr />

            @*CARRUSEL*@
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Images/gatito_1.png" class="d-block w-100 imagenCarrousel" alt="..." />
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/gatito_2.png" class="d-block w-100 imagenCarrousel" alt="..." />
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/gatito_3.png" class="d-block w-100 imagenCarrousel" alt="..." />
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/gatito_4.png" class="d-block w-100 imagenCarrousel" alt="..." />
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/gatito_5.png" class="d-block w-100 imagenCarrousel" alt="..." />
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleSlidesOnly" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleSlidesOnly" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            @*LOGIN*@
            <div class="container panelLogin">
                <div class="d-flex justify-content-center h-100">
                    <div class="card">
                        <div class="card-header">
                            <h3>Login</h3>
                            <div class="d-flex justify-content-end social_icon">
                            </div>
                        </div>
                        <div class="card-body">

                            <form runat="server">
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                                    </div>
                                    <input id="txtUser" runat="server" type="text" class="form-control" placeholder="username" ng-model="usuario" />

                                </div>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-key"></i></span>
                                    </div>
                                    <input id="txtPassword" runat="server" type="password" class="form-control" placeholder="password" ng-model="password" />
                                </div>
                                <div class="form-group">
                                    <button id="btnLogin" runat="server" class="btn float-right login_btn" ng-click="ValidarLogin(usuario, password)">
                                        Login
                                    </button>

                                </div>
                                <br />
                                <br />
                                <div class="form-group">
                                    <div id="divMensajeError" class="alert alert-danger" role="alert" ng-show="visibleError">
                                        <span id="MensajeError">{{mensaje}}</span>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>

</html>